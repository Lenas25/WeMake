        <activity
            android:name=".ManageCouponsActivity"
            android:exported="false" />
        <activity
            android:name=".VoiceTaskActivity"
            android:exported="false" />
        <activity
            android:name=".RedeemPointsActivity"
            android:exported="false" />
        <activity
            android:name=".CreateBoardActivity"
            android:exported="false" />
        <activity
            android:name=".SetupActivity"
            android:exported="false" />
        <activity
            android:name=".AddMembersActivity"
            android:exported="false" />
        <activity
            android:name=".EditBoardActivity"
            android:exported="false" />
        <activity
            android:name=".AddTaskBottomSheet"
