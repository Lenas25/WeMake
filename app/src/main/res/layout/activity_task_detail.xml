<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context=".TaskDetailActivity">

    <!-- Header con título, botón back, editar y eliminar -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/ic_arrow_back"
            app:iconSize="24dp"
            app:iconTint="?attr/colorOnSurface"/>

        <!-- Título -->
        <TextView
            android:id="@+id/title_new_task"
            style="@style/TextAppearance.Material3.HeadlineSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/task_detail"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:letterSpacing="0.01"/>

        <!-- Botón editar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/ic_edit"
            app:iconSize="24dp"
            app:iconTint="?attr/colorPrimary"/>

        <!-- Botón eliminar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/ic_delete"
            app:iconSize="24dp"
            app:iconTint="?attr/colorError"/>
    </LinearLayout>

    <!-- Contenido principal -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        android:scrollbars="none"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="middle">

            <!-- Título + Estado + Prioridad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <!-- Título de la tarea -->
                <TextView
                    android:id="@+id/task_detail_title"
                    style="@style/TextAppearance.Material3.TitleLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_task_title"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:lineSpacingExtra="4dp"
                    android:letterSpacing="0.01"/>

                <!-- Contenedor para los Chips de Estado y Prioridad -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <!-- NUEVO: Chip de Estado -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/task_detail_status"
                        style="@style/Widget.Material3.Chip.Suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipStrokeWidth="0dp"
                        tools:text="En Progreso"
                        tools:chipBackgroundColor="?attr/colorSecondaryContainer"/>

                    <!-- Chip de prioridad -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/task_detail_priority"
                        style="@style/Widget.Material3.Chip.Suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:chipStrokeWidth="0dp"
                        tools:text="Alta"
                        tools:chipBackgroundColor="?attr/colorErrorContainer"/>
                </LinearLayout>
            </LinearLayout>


            <!-- Card Asignado / Revisado / Fecha -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/detail_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- FILA 1: LÍMITE DE FECHA -->
                    <ImageView
                        android:id="@+id/icon_due_date"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:contentDescription="@string/due_date"/>

                    <TextView
                        android:id="@+id/label_due_date"
                        style="@style/TextAppearance.Material3.LabelMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/due_date"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintStart_toEndOf="@id/icon_due_date"
                        app:layout_constraintTop_toTopOf="@id/icon_due_date"
                        app:layout_constraintBottom_toBottomOf="@id/icon_due_date"/>

                    <TextView
                        android:id="@+id/task_detail_due_date"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        tools:text="20 Oct"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/label_due_date"
                        app:layout_constraintBottom_toBottomOf="@id/label_due_date"/>

                    <!-- DIVISOR -->
                    <View
                        android:id="@+id/divider1"
                        android:layout_width="0dp"
                        android:layout_height="0.8dp"
                        android:background="?attr/colorOutlineVariant"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/icon_due_date"
                        app:layout_constraintStart_toStartOf="@id/label_due_date"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- FILA 2: ASIGNADO A -->
                    <ImageView
                        android:id="@+id/icon_assignee"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_user_group"
                        app:tint="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider1"
                        android:contentDescription="@string/assigned_to"/>

                    <TextView
                        android:id="@+id/label_assignee"
                        style="@style/TextAppearance.Material3.LabelMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/assigned_to"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintStart_toEndOf="@id/icon_assignee"
                        app:layout_constraintTop_toTopOf="@id/icon_assignee"
                        app:layout_constraintBottom_toBottomOf="@id/icon_assignee"/>

                    <TextView
                        android:id="@+id/task_detail_assigned_members"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        tools:text="Sin asignar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/label_assignee"
                        app:layout_constraintBottom_toBottomOf="@id/label_assignee"/>

                    <!-- DIVISOR -->
                    <View
                        android:id="@+id/divider2"
                        android:layout_width="0dp"
                        android:layout_height="0.8dp"
                        android:background="?attr/colorOutlineVariant"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/icon_assignee"
                        app:layout_constraintStart_toStartOf="@id/label_assignee"
                        app:layout_constraintEnd_toEndOf="parent"/>


                    <!-- FILA 3: REVISADO POR -->
                    <ImageView
                        android:id="@+id/icon_reviewer"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_supervisor"
                        app:tint="?attr/colorPrimary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider2"
                        android:contentDescription="@string/reviewed_by"/>

                    <TextView
                        android:id="@+id/label_reviewer"
                        style="@style/TextAppearance.Material3.LabelMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/reviewed_by"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        app:layout_constraintStart_toEndOf="@id/icon_reviewer"
                        app:layout_constraintTop_toTopOf="@id/icon_reviewer"
                        app:layout_constraintBottom_toBottomOf="@id/icon_reviewer"/>

                    <TextView
                        android:id="@+id/tvReviewer"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        tools:text="Josue R."
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/label_reviewer"
                        app:layout_constraintBottom_toBottomOf="@id/label_reviewer"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Recompensa y penalidad -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:weightSum="2" >

                    <!-- Recompensa -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="?attr/colorTertiaryContainer"
                        android:padding="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            style="@style/TextAppearance.Material3.LabelMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/reward"
                            android:textColor="?attr/colorOnTertiaryContainer"
                            android:drawableStart="@drawable/ic_credit_score"
                            android:drawablePadding="8dp"
                            android:drawableTint="?attr/colorOnTertiaryContainer"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/tvReward"
                            style="@style/TextAppearance.Material3.HeadlineSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="150 monedas"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnTertiaryContainer"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- Penalidad -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="?attr/colorErrorContainer"
                        android:padding="16dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            style="@style/TextAppearance.Material3.LabelMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/penalty"
                            android:textColor="?attr/colorOnErrorContainer"
                            android:drawableStart="@drawable/ic_credit_card_off"
                            android:drawablePadding="8dp"
                            android:drawableTint="?attr/colorOnErrorContainer"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/tvPenalty"
                            style="@style/TextAppearance.Material3.HeadlineSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="150 monedas"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnErrorContainer"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Descripción -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <!-- Header de descripción con ícono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_notes"
                            android:layout_marginEnd="12dp"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            style="@style/TextAppearance.Material3.LabelLarge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ex_task_description"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Contenido de la descripción -->
                    <TextView
                        android:id="@+id/task_detail_description"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/description"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:lineSpacingExtra="4dp"
                        android:letterSpacing="0.01" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Subtareas -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <!-- Header de subtareas con ícono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_list"
                            android:layout_marginEnd="12dp"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/subtasks_label"
                            style="@style/TextAppearance.Material3.LabelLarge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/subtasks"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Lista de subtareas -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/subtasks_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="4dp"
                        android:nestedScrollingEnabled="false"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
