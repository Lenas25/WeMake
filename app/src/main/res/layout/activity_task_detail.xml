<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:clipToPadding="true"
    android:paddingTop="30dp"
    tools:context=".TaskDetailActivity">

    <!-- Header con título, botón back, editar y eliminar -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:background="?attr/colorSurface"
        android:elevation="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/ic_arrow_back"
            app:iconSize="24dp"
            app:iconTint="?attr/colorOnSurface"/>

        <!-- Título -->
        <TextView
            android:id="@+id/title_new_task"
            style="@style/TextAppearance.Material3.HeadlineSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/task_detail"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:letterSpacing="0.01"/>

        <!-- Botón editar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/ic_edit"
            app:iconSize="24dp"
            app:iconTint="?attr/colorPrimary"/>

        <!-- Botón eliminar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/ic_delete"
            app:iconSize="24dp"
            app:iconTint="?attr/colorError"/>
    </LinearLayout>

    <!-- Contenido principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp"
        android:paddingBottom="24dp"
        android:scrollbars="none"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="middle">

            <!-- Título + Prioridad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Título de la tarea -->
                <TextView
                    android:id="@+id/task_detail_title"
                    style="@style/TextAppearance.Material3.TitleLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sample_task_title"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:lineSpacingExtra="4dp"
                    android:letterSpacing="0.01"/>

                <!-- Chip de prioridad -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/task_detail_priority"
                    style="@style/Widget.Material3.Chip.Suggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/high_priority"
                    app:chipBackgroundColor="?attr/colorErrorContainer"
                    app:chipStrokeWidth="0dp"
                    app:chipIcon="@drawable/ic_priority_high"
                    app:chipIconTint="?attr/colorOnErrorContainer"
                    app:chipIconSize="18dp"/>
            </LinearLayout>

            <!-- Card Asignado / Revisado / Fecha -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/detail_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:weightSum="3">

                    <!-- Asignado -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            style="@style/TextAppearance.Material3.LabelMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/assigned_to"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:gravity="center"
                            android:drawableStart="@drawable/ic_user_group"
                            android:drawableTint="?attr/colorPrimary"/>

                        <TextView
                            android:id="@+id/task_detail_assigned_members"
                            style="@style/TextAppearance.Material3.BodyLarge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sin asignar"
                            android:layout_marginTop="8dp"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- Revisado por -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            style="@style/TextAppearance.Material3.LabelMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/reviewed_by"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:gravity="center"
                            android:drawableStart="@drawable/ic_supervisor"
                            android:drawableTint="?attr/colorPrimary"/>

                        <TextView
                            android:id="@+id/tvReviewer"
                            style="@style/TextAppearance.Material3.BodyLarge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Josue R."
                            android:layout_marginTop="8dp"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- Fecha -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            style="@style/TextAppearance.Material3.LabelMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/due_date"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:gravity="center"
                            android:drawableStart="@drawable/ic_calendar"
                            android:drawableTint="?attr/colorPrimary"/>

                        <TextView
                            android:id="@+id/task_detail_due_date"
                            style="@style/TextAppearance.Material3.BodyLarge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="20 Oct"
                            android:layout_marginTop="8dp"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Recompensa y penalidad -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:weightSum="2" >

                    <!-- Recompensa -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="?attr/colorTertiaryContainer"
                        android:padding="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            style="@style/TextAppearance.Material3.LabelMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/reward"
                            android:textColor="?attr/colorOnTertiaryContainer"
                            android:drawableStart="@drawable/ic_credit_score"
                            android:drawablePadding="8dp"
                            android:drawableTint="?attr/colorOnTertiaryContainer"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/tvReward"
                            style="@style/TextAppearance.Material3.HeadlineSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="150 monedas"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnTertiaryContainer"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- Penalidad -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="?attr/colorErrorContainer"
                        android:padding="16dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            style="@style/TextAppearance.Material3.LabelMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/penalty"
                            android:textColor="?attr/colorOnErrorContainer"
                            android:drawableStart="@drawable/ic_credit_card_off"
                            android:drawablePadding="8dp"
                            android:drawableTint="?attr/colorOnErrorContainer"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/tvPenalty"
                            style="@style/TextAppearance.Material3.HeadlineSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="150 monedas"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnErrorContainer"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Descripción -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header de descripción con ícono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_notes"
                            android:layout_marginEnd="12dp"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            style="@style/TextAppearance.Material3.LabelLarge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ex_task_description"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Contenido de la descripción -->
                    <TextView
                        android:id="@+id/task_detail_description"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/description"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:lineSpacingExtra="4dp"
                        android:letterSpacing="0.01" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Subtareas -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header de subtareas con ícono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_list"
                            android:layout_marginEnd="12dp"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/subtasks_label"
                            style="@style/TextAppearance.Material3.LabelLarge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/subtasks"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Lista de subtareas -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/subtasks_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="4dp"
                        android:nestedScrollingEnabled="false"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
