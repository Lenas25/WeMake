<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:paddingHorizontal="16dp">

        <!-- === SECCIÓN DE CONTENIDO (ARRIBA) === -->

        <!-- Título de la tarea -->
        <TextView
            android:id="@+id/task_title"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Este es un título de tarea extremadamente largo que ahora tiene espacio para respirar" />

        <!-- Descripción de la tarea -->
        <TextView
            android:id="@+id/task_description"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/task_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Esta es una descripción de la tarea que es muy, muy larga para demostrar cómo el atributo ellipsize funciona." />

        <!-- Miembros Asignados con Icono -->
        <TextView
            android:id="@+id/task_responsible"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_user_group"
            android:drawablePadding="8dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            app:drawableTint="?attr/colorOnSurfaceVariant"
            app:layout_constraintTop_toBottomOf="@id/task_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="3 miembros asignados" />

        <!-- Fecha de Creación con Icono -->
        <TextView
            android:id="@+id/task_due_date"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:drawableStartCompat="@drawable/ic_calendar"
            app:drawableTint="?attr/colorOnSurfaceVariant"
            app:layout_constraintTop_toBottomOf="@id/task_responsible"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Vence: 22 Oct" />

        <!-- Fecha Límite (Deadline) con Icono -->
        <TextView
            android:id="@+id/task_created_date"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textStyle="bold"
            app:drawableTint="?attr/colorOnSurfaceVariant"
            app:layout_constraintTop_toTopOf="@id/task_due_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/task_due_date"
            tools:text="Creado: 25 Oct" />

        <!-- === SECCIÓN DE ACCIONES (ABAJO) === -->

        <!-- Divisor para separar contenido de acciones -->
        <View
            android:id="@+id/actions_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?attr/colorOutlineVariant"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/task_due_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Barra de Acciones -->
        <LinearLayout
            android:id="@+id/actions_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/actions_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Botón de Abrir Detalle -->

            <Button
                android:id="@+id/button_external"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_external_link"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:padding="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:tooltipText="Ver detalles"
                android:contentDescription="@string/btn_open" />

            <!-- Botón de Cambiar Estado -->
            <Button
                android:id="@+id/button_change"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_change"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:layout_marginStart="8dp"
                android:padding="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:tooltipText="Cambiar estado"
                android:contentDescription="@string/btn_change" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>