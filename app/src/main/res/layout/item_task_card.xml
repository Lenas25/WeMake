<?xml version="1.0" encoding="utf-8"?>
<!-- Tarjeta de Material Design que contiene la información de una tarea -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_marginEnd="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOnSurface"
    app:cardCornerRadius="16dp">

    <!-- Contenedor interno para organizar los elementos con restricciones -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Título de la tarea -->
        <TextView
            android:id="@+id/task_title"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/ex_task_title"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_change"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@id/task_description" />

        <!-- Icono de cambio/edición de la tarea
            - style: Lo hace transparente y circular.
            - app:icon: Reemplaza a android:src.
            - contentDescription: Esencial para accesibilidad.
        -->
        <Button
            android:id="@+id/button_change"
            style="?attr/materialIconButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_change"
            app:iconSize="24dp"
            android:contentDescription="@string/btn_change"
            app:layout_constraintEnd_toStartOf="@id/button_external"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Icono de enlace externo asociado a la tarea -->
        <Button
            android:id="@+id/button_external"
            style="?attr/materialIconButtonStyle"
            app:icon="@drawable/ic_external_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconSize="24dp"
            android:contentDescription="@string/btn_open"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--
           CAMBIO CLAVE: Barrera
           Esta línea invisible se coloca automáticamente debajo del elemento MÁS BAJO
           de la primera fila (en este caso, los botones).
       -->
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/header_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="task_title, button_change, button_external" />


        <!-- Descripción breve de la tarea -->
        <TextView
            android:id="@+id/task_description"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/ex_task_description"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_barrier" />


        <!-- Nombre del responsable de la tarea -->
        <TextView
            android:id="@+id/task_responsible"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/ex_task_responsible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/task_due_date"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <!-- Fecha de vencimiento de la tarea -->
        <TextView
            android:id="@+id/task_due_date"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/ex_task_duedate"
            android:layout_marginTop="10dp"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>