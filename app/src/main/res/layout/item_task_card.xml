<?xml version="1.0" encoding="utf-8"?>
<!-- Tarjeta de Material Design que contiene la información de una tarea -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutlineVariant"
    app:cardCornerRadius="16dp">

    <!-- Contenedor interno para organizar los elementos con restricciones -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Título de la tarea -->
        <TextView
            android:id="@+id/task_title"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Título"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/icon_change"/>

        <!-- Descripción breve de la tarea -->
        <TextView
            android:id="@+id/task_description"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Description"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_title"
            app:layout_constraintEnd_toEndOf="@id/task_title"/>

        <!-- Nombre del responsable de la tarea -->
        <TextView
            android:id="@+id/task_responsible"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Responsable"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_description" />

        <!-- Icono de cambio/edición de la tarea -->
        <ImageView
            android:id="@+id/icon_change"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_change"
            app:layout_constraintEnd_toStartOf="@id/icon_external"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"/>

        <!-- Icono de enlace externo asociado a la tarea -->
        <ImageView
            android:id="@+id/icon_external"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_external_link"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Fecha de vencimiento de la tarea -->
        <TextView
            android:id="@+id/task_due_date"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Date"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/task_responsible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>