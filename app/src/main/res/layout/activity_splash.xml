<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="40dp"
    android:background="@drawable/splash_gradient_background"
    tools:context=".SplashActivity">

    <!--
        Bloque Central de Contenido:
        - Un LinearLayout vertical que agrupa el logo, el nombre de la app y la animación.
        - Está centrado horizontalmente y posicionado cerca de la parte superior.
        - Tiene un tamaño fijo, lo cual puede no ser ideal para todas las pantallas.
    -->
    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="464dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1">

        <!--
            Logo de la Aplicación:
            - Muestra la versión en blanco del logo.
        -->
        <ImageView
            android:id="@+id/logo_blanco"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo_blanco" />

        <!--
            Nombre de la Aplicación:
            - Muestra el nombre de la app con texto blanco y en negrita.
        -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/app_name"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="#ffff"
            android:textStyle="bold" />

        <!--
            Animación de Carga:
            - Muestra una animación Lottie que se reproduce en bucle.
        -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_animation_view"
            android:layout_width="275dp"
            android:layout_height="202dp"
            android:layout_marginTop="100dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="loading_animation.json"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_loop="true" />

    </LinearLayout>

    <!--
        Información Inferior:
        - Dos TextViews anclados en la parte inferior de la pantalla.
        - Muestran la versión de la app y el aviso de copyright.
    -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/copyright"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/version"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintBottom_toTopOf="@id/copyright"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>