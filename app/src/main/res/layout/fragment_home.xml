<?xml version="1.0" encoding="utf-8"?>
<!-- Scroll principal que permite el desplazamiento vertical si el contenido sobrepasa la pantalla -->
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/main"
    android:paddingTop="32dp"
    android:background="?attr/colorPrimaryContainer"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:clipChildren="false"
        android:layout_height="wrap_content">

        <!-- Encabezado con avatar, saludo, nombre y botón de ajustes -->
        <LinearLayout
            android:id="@+id/head_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Imagen de perfil del usuario -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatar"
                android:layout_width="52dp"
                android:layout_height="52dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleImageView"
                tools:src="@drawable/ic_user_avatar"
                app:strokeColor="@color/md_theme_onSurface"
                android:scaleType="centerCrop"
                android:padding="2dp"
                app:strokeWidth="1dp" />

            <!-- Texto de saludo -->
            <TextView
                android:id="@+id/greeting"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/greeting" />

            <!-- Nombre del usuario -->
            <TextView
                android:id="@+id/name"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="@string/ex_name" />

            <!-- Espaciador flexible que empuja al botón de ajustes hacia la derecha -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Botón de ajustes con ícono -->
            <ImageButton
                android:id="@+id/settings_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:iconTint="?attr/colorOnSurface"
                android:background="@drawable/circle_background_with_border"
                android:src="@drawable/ic_settings"
                android:scaleType="centerInside"
                android:padding="0dp"
                app:tint="?attr/colorOnSurface"/>
        </LinearLayout>


        <!--
           Contenedor LinearLayout:
           - Ocupará todo el ancho disponible.
           - Colocará a sus hijos (los TextView) uno al lado del otro.
       -->
        <LinearLayout
            android:id="@+id/title_work_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/head_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Primer TextView (ya no necesita anclajes ni márgenes) -->
            <TextView
                android:id="@+id/title_work"
                style="@style/TextAppearance.Material3.HeadlineSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_group"
                android:textStyle="bold" />

            <!-- Segundo TextView (ya no necesita anclajes ni márgenes) -->
            <TextView
                android:id="@+id/title_work2"
                style="@style/TextAppearance.Material3.HeadlineSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
            android:text="@string/title_group2"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"/> <!-- Un color diferente para distinguirlo -->

            <!-- Tercer TextView (ya no necesita anclajes ni márgenes) -->
            <TextView
                android:id="@+id/title_work3"
                style="@style/TextAppearance.Material3.HeadlineSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dot"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"/> <!-- Mismo color que el anterior -->
        </LinearLayout>

        <!-- Dropdown con menú desplegable -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dropdown_layout"
            style="@style/Widget.App.TextInputLayout.RoundedDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:boxBackgroundColor="?attr/colorSurface"
            app:iconTint="?attr/colorOnSurface"
            app:boxStrokeColor="?attr/colorOnSurface"
            app:boxStrokeWidth="1dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_work_container" >

            <!-- Campo de texto desplegable -->
            <AutoCompleteTextView
                android:id="@+id/dropdown_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="@string/ex_dashboard"
                android:labelFor="@id/dropdown_layout"
                tools:ignore="MissingConstraints" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Guía vertical que divide la pantalla en dos columnas -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <!-- Tarjeta de resumen de tareas -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_tareas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeWidth="0dp"
            android:layout_marginEnd="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical"
            app:layout_constraintTop_toBottomOf="@id/dropdown_layout">

            <!-- Contenido de la tarjeta de tareas -->
            <include
                layout="@layout/item_summary_card"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tarjeta de pendientes -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_pendientes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="0dp"
            app:cardElevation="4dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="?attr/colorSurface"
            app:layout_constraintBottom_toBottomOf="@id/card_tareas"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical"
            app:layout_constraintTop_toTopOf="@id/card_tareas">

            <!-- Contenido de la tarjeta de pendientes -->
            <include
                layout="@layout/item_summary_card"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tarjeta de vencidos -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_vencidos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:strokeWidth="0dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginStart="24dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical"
            app:layout_constraintTop_toBottomOf="@id/card_tareas">

            <!-- Contenido de la tarjeta de vencidos -->
            <include
                layout="@layout/item_summary_card"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tarjeta de puntos -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_puntos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="0dp"
            app:cardElevation="4dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="?attr/colorSurface"
            app:layout_constraintBottom_toBottomOf="@id/card_vencidos"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical"
            app:layout_constraintTop_toTopOf="@id/card_vencidos">

            <!-- Contenido de la tarjeta de puntos -->
            <include
                layout="@layout/item_summary_card"/>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/empty_state_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/content_background"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="120dp"
            android:paddingBottom="120dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_vencidos"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:alpha="0.6"
                android:src="@drawable/ic_tasks"
                app:tint="?android:attr/textColorSecondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/empty_task_title"
                android:textAlignment="center"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/empty_task_description"
                android:textAlignment="center"
                android:paddingBottom="120dp"
                android:textColor="?android:attr/textColorTertiary"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_options_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/card_vencidos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Botón para ir al Timeline -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_open_timeline"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Timeline del Tablero"
                android:textColor="?attr/colorOnSecondaryContainer"
                app:backgroundTint="?attr/colorSecondaryContainer"
                app:icon="@drawable/ic_calendar"
                app:iconGravity="textStart" />
            <!-- Nota: Asegúrate de tener un icono ic_calendar_today o similar -->
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_kanban_board"
            android:layout_width="match_parent"
            android:minHeight="500dp"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:paddingBottom="160dp"
            android:paddingTop="24dp"
            android:background="@drawable/content_background"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="4"
            tools:listitem="@layout/item_kanban"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_options_container"
            android:visibility="visible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
