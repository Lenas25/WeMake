<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:id="@+id/main_container"
    tools:context=".CreateTaskActivity">

    <!-- AppBarLayout contiene la Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/top_app_bar"
            style="@style/Widget.Material3.Toolbar.Surface"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:titleCentered="true"
            app:menu="@menu/save_menu"
            app:title="@string/new_task" />

    </com.google.android.material.appbar.AppBarLayout>

    <!--
        NestedScrollView para el contenido desplazable.
        El 'layout_behavior' es la magia que lo posiciona debajo de la AppBar.
    -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:layout_marginTop="?attr/actionBarSize"
        android:fillViewport="true">

        <!--
            Tu ConstraintLayout con todos los campos se queda igual,
            pero hemos eliminado el header manual.
        -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp">

        <!-- Campo: Título -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/title_input_layout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/task_title"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo: Descripción -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/description_input_layout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/task_description"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/title_input_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_task_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences|textMultiLine"
                android:minLines="3"
                android:maxLines="5"
                android:gravity="top"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sección: Asignar miembro -->
        <TextView
            android:id="@+id/assign_member_label"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/assign_member"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toBottomOf="@id/description_input_layout"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/members_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutline"
            app:layout_constraintTop_toBottomOf="@id/assign_member_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupMembers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                app:singleLine="false"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_jorge"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jorge"
                    app:chipIcon="@drawable/ic_profile"
                    app:chipIconSize="20dp"
                    app:closeIconEnabled="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_elena"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elena"
                    android:layout_marginStart="8dp"
                    app:chipIcon="@drawable/ic_profile"
                    app:chipIconSize="20dp"
                    app:closeIconEnabled="true" />

            </com.google.android.material.chip.ChipGroup>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección: Tiempo y Fecha -->
        <TextView
            android:id="@+id/date_time_label"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/task_date_time"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toBottomOf="@id/members_card"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/date_time_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@id/date_time_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_time"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ex_time"
                app:chipIcon="@drawable/ic_time"
                app:chipIconSize="20dp"
                app:chipBackgroundColor="?attr/colorSecondaryContainer"
                app:chipIconTint="?attr/colorOnSecondaryContainer" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_date"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ex_date"
                android:layout_marginStart="12dp"
                app:chipIcon="@drawable/ic_calendar"
                app:chipIconSize="20dp"
                app:chipBackgroundColor="?attr/colorSecondaryContainer"
                app:chipIconTint="?attr/colorOnSecondaryContainer"/>
        </LinearLayout>

        <!-- Sección: Prioridad -->
        <TextView
            android:id="@+id/priority_label"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/task_priority"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toBottomOf="@id/date_time_container"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggle_priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:layout_constraintTop_toBottomOf="@id/priority_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_priority_low"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="@string/low_priority"
                app:icon="@drawable/ic_priority_low"
                app:iconSize="18dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_priority_medium"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:text="@string/medium_priority"
                app:icon="@drawable/ic_priority_medium"
                app:iconSize="18dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_priority_high"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="@string/high_priority"
                app:icon="@drawable/ic_priority_high"
                app:iconSize="18dp" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>