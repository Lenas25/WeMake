<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp">

    <!-- Hora -->
    <TextView
        android:id="@+id/tv_task_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07:00\nAM"
        android:textSize="13sp"
        android:gravity="center"
        android:textColor="#757575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_task_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_task_desc"/>

    <!-- Línea divisoria o Punto -->
    <View
        android:id="@+id/view_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/bg_date_selected"
        android:backgroundTint="#7986CB"
        app:layout_constraintStart_toEndOf="@id/tv_task_time"
        app:layout_constraintEnd_toStartOf="@id/tv_task_title"
        app:layout_constraintTop_toTopOf="@id/tv_task_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_task_title"
        android:layout_marginHorizontal="16dp"/>

    <!-- Título -->
    <TextView
        android:id="@+id/tv_task_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sport"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/view_dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Descripción -->
    <TextView
        android:id="@+id/tv_task_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Run for 1 hour"
        android:textSize="14sp"
        android:textColor="#9E9E9E"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/tv_task_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_task_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>