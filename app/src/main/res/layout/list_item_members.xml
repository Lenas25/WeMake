<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardMember"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="2dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="?attr/colorSurfaceContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Avatar -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgAvatar"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/ic_user_avatar"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:strokeWidth="2dp"
            android:padding="2dp"
            app:strokeColor="?attr/colorOutlineVariant"/>

        <!-- Datos de usuario -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="12dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ex_name"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_user"
                style="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Estado de agregado -->
            <TextView
                android:id="@+id/tvAddedStatus"
                style="@style/TextAppearance.Material3.LabelSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/user_added"
                android:textColor="?attr/colorPrimary"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Chip rol -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipRole"
            style="@style/Widget.Material3.Chip.Assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/role_admin"
            app:chipCornerRadius="20dp"
            app:chipBackgroundColor="?attr/colorPrimaryContainer"
            android:textColor="?attr/colorOnPrimaryContainer"
            app:chipStrokeWidth="0dp"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="32dp"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <!-- BotÃ³n de eliminar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRemoveMember"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:icon="@drawable/ic_delete"
            app:iconSize="20dp"
            app:iconTint="?attr/colorError"
            android:backgroundTint="?attr/colorErrorContainer"
            android:visibility="visible"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>