<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/colorSurface"
    tools:context=".DataFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/top_app_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleCentered="true"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:titleTextColor="?attr/colorOnSurface"
            android:letterSpacing="0.01"
            tools:title="@string/settings"
            style="@style/Widget.Material3.Toolbar.Surface"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/content_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <!-- Tarjeta 1 Corregida -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutline">
                    <LinearLayout android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView style="@style/TextAppearance.Material3.HeadlineMedium"
                            android:id="@+id/tv_total_tasks"
                            tools:text="48"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView style="@style/TextAppearance.Material3.LabelMedium"
                            android:text="Tareas Totales"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tarjeta 2 Corregida -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutline">
                    <LinearLayout android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView style="@style/TextAppearance.Material3.HeadlineMedium"
                            android:id="@+id/tv_on_time_rate"
                            tools:text="92%"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView style="@style/TextAppearance.Material3.LabelMedium"
                            android:text="A Tiempo"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Sección de Productividad -->
            <TextView style="@style/TextAppearance.Material3.TitleLarge"
                android:text="Productividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"/>

            <!-- Tarjeta 3 Corregida -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView style="@style/TextAppearance.Material3.TitleMedium"
                        android:text="Tareas Completadas por Semana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/bar_chart_tasks_per_week"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta 4 Corregida -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView style="@style/TextAppearance.Material3.TitleMedium"
                        android:text="Distribución por Prioridad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pie_chart_priority"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Sección de Predicciones -->
            <TextView style="@style/TextAppearance.Material3.TitleLarge"
                android:text="Predicciones de IA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"/>
            <TextView style="@style/TextAppearance.Material3.TitleMedium"
                android:text="Tareas en Riesgo de Retraso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_at_risk_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_at_risk_task"
                tools:itemCount="2"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                />
        </LinearLayout>
    </ScrollView>

    <!-- Indicador de Carga (Sin cambios) -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible"/>

    <!-- Mensaje de Error / Estado Vacío (Sin cambios) -->
    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:padding="32dp"
        android:textAlignment="center"
        tools:text="Error al cargar los datos.\nInténtalo de nuevo más tarde."/>
</FrameLayout>